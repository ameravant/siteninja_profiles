- form_tag session_path do
  %p
    %label{:for => "login"} Login
    %br
    = text_field_tag 'login'
  %p
    %label{:for => "password"} Password
    %br
    = password_field_tag 'password'
  %p= submit_tag 'Sign in', :class => 'big'
 
%p=link_to "Not a member? Sign up!", new_profile_url
%p=link_to "Forgot your password?", forgot_password_profiles_url